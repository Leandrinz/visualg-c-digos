Algoritmo "Ler nome e idade"

Var
   i: inteiro
   n: caractere


Inicio
      Escreval("------------------")
      Escreval("  IDADE E NOME")
      Escreval("------------------")
      Escreva ("Digite seu nome: ")
      leia(n)
      Escreva("Digite sua idade:")
      leia(i)
      Escreval("Olá ",n, ", você tem ", i, " anos de idade!")

Fimalgoritmo